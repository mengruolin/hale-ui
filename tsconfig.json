{
  "compilerOptions": {
    "target": "esnext",
    // "module": "esnext",
    "module": "commonjs",
    "noEmit": true,
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": ["webpack-env"],
    "paths": {
      "@/*": [
        "site/*"
      ]
    },
    // vue cli config -- site @dir
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "ts-node": {
    "transpileOnly": true
  },
  "include": ["site/**/*", "packages/**/*", "typings/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
